<!--Back image for back button-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@mipmap/ic_backward">
        <layer-list>
            <item android:left="5dp" android:top="5dp" android:width="120sp" android:height="120sp">
                <shape>
                    <corners android:radius="8dp" />
                    <solid android:color="@color/brown_100" />
                </shape>
            </item>
            <item android:bottom="8dp" android:right="8dp" android:left="8dp" android:top="8dp" android:width="120sp" android:height="120sp">
                <shape>
                    <solid android:color="@color/white" />
                    <corners android:radius="8dp" />
                    <padding android:bottom="10dp" android:left="10dp"
                        android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>