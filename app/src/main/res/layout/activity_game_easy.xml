<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_100"
    tools:ignore="MissingDefaultResource">

    <ImageButton
        android:id="@+id/backward_btn"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:background="@color/purple_100"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:src="@mipmap/ic_pause_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"></ImageButton>

    <TextView
        android:id="@+id/textLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/impact"
        android:text="EASY"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textLevel">

        <ImageView
            android:id="@+id/pic_clock"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginLeft="20sp"
            android:src="@mipmap/ic_clock_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/impact"
            android:text="3:00"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="28sp" />

    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="6"
        android:id="@+id/GridLayout_easy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <ImageButton
            android:id="@+id/btn1_1"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_margin="4sp"
            android:background="@drawable/custom_pair_item" />

        <ImageButton
            android:id="@+id/btn1_2"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_margin="4sp"
            android:background="@drawable/custom_pair_item"/>

        <ImageButton
            android:id="@+id/btn1_3"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_margin="4sp"
            android:background="@drawable/custom_pair_item"/>

        <ImageButton
            android:id="@+id/btn2_1"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_margin="4sp"
            android:background="@drawable/custom_pair_item"/>

        <ImageButton
            android:id="@+id/btn2_2"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_margin="4sp"
            android:background="@drawable/custom_pair_item"/>

        <ImageButton
            android:id="@+id/btn2_3"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_margin="4sp"
            android:background="@drawable/custom_pair_item"/>

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>